        RecycleView:
            md_bg_color: 'blue'
            id: product_list
            viewclass: 'ProductCard'

            RecycleBoxLayout:
                orientation: 'vertical'
                default_size: None, dp(120)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)


    NavigationDrawer:
        id: nav_drawer
        anchor: 'right'
        radius: 0, dp(16), dp(16), 0
        update_zip_code: root.controller.update_zip_code