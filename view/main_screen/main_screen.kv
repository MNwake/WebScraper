<MainScreenView>:
    MDBoxLayout:
        orientation: 'vertical'
#
        # Top Status Bar
        MDTopAppBar:
            type: "small"

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    id: start_stop_button
                    icon: "play-circle-outline"
                    on_release: root.toggle_scraper()

            MDTopAppBarTitle:
                text: "Webscraper"
                adaptive_width: False
                size_hint_x: 1

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    id: refresh_button
                    icon: "refresh"
                    on_release: root.refresh_proxies()

                MDActionTopAppBarButton:
                    id: settings_button
                    icon: "cog-outline"
                    on_release: nav_drawer.set_state("open")

